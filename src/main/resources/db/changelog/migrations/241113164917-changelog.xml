<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1731512957510-1" author="gkhaavik">
        <createTable tableName="variant_option_entity">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_variant_option_entity"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_variant_id" type="BIGINT"/>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1731512957510-2" author="gkhaavik">
        <addColumn tableName="order_lines">
            <column name="variant_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1731512957510-3" author="gkhaavik">
        <addForeignKeyConstraint baseColumnNames="variant_id" baseTableName="order_lines"
                                 constraintName="FK_ORDER_LINES_ON_VARIANT" referencedColumnNames="id"
                                 referencedTableName="variant_option_entity"/>
    </changeSet>
    <changeSet id="1731512957510-4" author="gkhaavik">
        <addForeignKeyConstraint baseColumnNames="product_variant_id" baseTableName="variant_option_entity"
                                 constraintName="FK_VARIANT_OPTION_ENTITY_ON_PRODUCT_VARIANT" referencedColumnNames="id"
                                 referencedTableName="variant_option_entity"/>
    </changeSet>

</databaseChangeLog>